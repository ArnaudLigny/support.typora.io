---
layout: nil
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="text" xml:lang="en">Typora News</title>
  <link type="application/atom+xml" href="atom_feed_url" rel="self"/>
  <link type="text/html" href="home_url_canonical" rel="alternate"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>typora-news-xml</id>
  <author>
    <name>typora.io</name>
  </author>
  <rights>copyright_details</rights>

  {% assign counter = '0' %}
  {% for post in site.posts %}
  {% if post.tags contains 'news' and counter < '1' %}
  <entry>
    <title>{{ post.title }}</title>
    <link href="{{ post.url | xml_escape}}"/>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <id>{{ post.url | xml_escape }}</id>
  </entry>
  {% capture counter %}{{ counter | plus:'1' }}{% endcapture %}
  {% endif %}
  {% endfor %}
</feed>